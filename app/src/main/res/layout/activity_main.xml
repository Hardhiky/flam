<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/camera_background"
    tools:context=".MainActivity">

    <!-- Camera Preview Surface -->
    <android.opengl.GLSurfaceView
        android:id="@+id/glSurfaceView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/controlsContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- FPS Counter Overlay -->
    <LinearLayout
        android:id="@+id/statsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/fps_counter_background"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fpsTextView"
            style="@style/TextAppearance.EdgeDetector.FPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fps_label"
            tools:text="FPS: 30" />

        <TextView
            android:id="@+id/processingTimeTextView"
            style="@style/TextAppearance.EdgeDetector.FPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/processing_time_label"
            tools:text="Processing: 25ms" />

        <TextView
            android:id="@+id/resolutionTextView"
            style="@style/TextAppearance.EdgeDetector.Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/resolution_label"
            tools:text="Resolution: 1280x720" />

        <TextView
            android:id="@+id/modeTextView"
            style="@style/TextAppearance.EdgeDetector.Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/processing_mode_label"
            tools:text="Mode: EDGE" />
    </LinearLayout>

    <!-- Controls Container -->
    <LinearLayout
        android:id="@+id/controlsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/overlay_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Raw Mode Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRawMode"
            style="@style/Widget.EdgeDetector.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="@string/mode_raw"
            android:textSize="12sp" />

        <!-- Edge Detection Mode Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEdgeMode"
            style="@style/Widget.EdgeDetector.Button.Active"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="@string/mode_edge"
            android:textSize="12sp" />

        <!-- Grayscale Mode Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGrayscaleMode"
            style="@style/Widget.EdgeDetector.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mode_grayscale"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <!-- Status Message TextView -->
    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/overlay_background"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Initializing camera..."
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>

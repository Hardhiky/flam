<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <!--
        Data extraction rules for Android 12+ (API 31+)
        Defines what data can be extracted from the app for cloud backup
    -->
    <cloud-backup>
        <!-- Include shared preferences -->
        <include domain="sharedpref" path="." />

        <!-- Exclude device-specific preferences -->
        <exclude domain="sharedpref" path="device_prefs.xml" />

        <!-- Exclude cache -->
        <exclude domain="file" path="cache/" />
    </cloud-backup>

    <device-transfer>
        <!-- Include shared preferences for device-to-device transfer -->
        <include domain="sharedpref" path="." />

        <!-- Exclude temporary data -->
        <exclude domain="file" path="temp/" />
    </device-transfer>
</data-extraction-rules>
